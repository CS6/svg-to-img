{
  "name": "svg-to-img",
  "version": "1.0.6",
  "description": "A node.js library to convert SVGs to images built with Puppeteer.",
  "homepage": "https://github.com/etienne-martin/svg-to-img",
  "keywords": [
    "svg",
    "png",
    "jpg",
    "jpeg",
    "image",
    "puppeteer",
    "node"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Etienne Martin",
    "url": "http://etiennemartin.ca/"
  },
  "scripts": {
    "dev": "tsc --pretty --watch",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "pretest": "npm run lint",
    "test": "jest src --coverage --verbose",
    "test:watch": "jest src --coverage --verbose --watch",
    "prebuild": "rm -rf dist/ && npm run lint",
    "build": "tsc --pretty"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/",
      "/typings/",
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "testMatch": [
      "**/?(*.)(test).(tsx|ts)"
    ],
    "collectCoverageFrom": [
      "src/**/*.(tsx|ts)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-martin/svg-to-img"
  },
  "bugs": {
    "url": "https://github.com/etienne-martin/svg-to-img/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/image-size": "0.0.29",
    "@types/jest": "^22.2.0",
    "@types/puppeteer": "^1.1.0",
    "@types/rimraf": "^2.0.2",
    "image-size": "^0.6.2",
    "jest": "^22.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "puppeteer": "^1.1.1"
  }
}
